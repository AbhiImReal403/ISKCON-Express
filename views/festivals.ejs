<!DOCTYPE html>
<html lang="en" class="h-100">
<%- include('./partials/head') %>

    <body class="d-flex flex-column h-100">
        <div class="wrapper">
            <!-- Header -->
            <%- include('./partials/header') %>



                <!-- Content -->

                <div class="page-body content my-5 py-5">

                    <div class="container-fluid">


                        <div class="row mb-2 mx-5 py-5">
                            <% if (festivals.length>0) {%>
                                <% festivals.forEach((festival,index)=> { %>
                                    <div class="col-md-6">
                                        <div
                                            class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative  festPost">
                                            <div class="col p-4 d-flex flex-column position-static">
                                                <strong class="d-inline-block mb-2 text-primary"></strong>
                                                <h3 class="mb-0">
                                                    <%= festival.title %>
                                                </h3>
                                                <div class="mb-1 text-muted">Nov 12</div>
                                                <p class="card-text mb-auto overflow-hidden" style="height: 3rem;">
                                                    <%= festival.content %>
                                                </p>
                                                <a href="/festivals/<%= festival.title %>-<%= index  %> "
                                                    class="stretched-link">Continue reading</a>
                                            </div>
                                            <div class="col-auto d-none d-lg-block">
                                                <img class="bd-placeholder-img" width="200" height="250"
                                                    src="/statics<%= festival.path %>"
                                                    aria-label="<%= festival.title %> image">
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>
                        </div>
                    </div>

                </div>


                <a href="#donate" class="donateLink" id="">Contribute Now</a>
                <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

                <!-- Footer -->




        </div>

        <%- include('./partials/footer') %>


    </body>

</html>


